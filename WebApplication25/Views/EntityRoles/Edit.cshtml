@model WebApplication25.Models.ModelView.RoleUserView

@{
    ViewData["Title"] = "Edit";
}



<div class="card align-content-center mt-5">
    <div class="card-header text-center">

 
        <h4>Add/Remove </h4>

    </div>
    <div class="card-body align-items-center ">

      
                <form method="post" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label  m-3">Role Name</label>
                        <input asp-for="Name" class="form-control text-center" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2 text-center">
                        <label class=" m-3">Select Sites</label>
                        <div>
                    <div class="form-check mt-1">
                        @for (int i = 0; i < Model.sites.Count; i++)
                            {
                                
                                    <label class="checkbox-inline">
                                        <input type="hidden" asp-for="@Model.sites[i].Name" />
                                        <input asp-for="@Model.sites[i].IsSelected" class="form-check-input m-1" />
                                        <label class="form-check-label" asp-for="@Model.sites[i].IsSelected">

                                            @Model.sites[i].Name
                                         </label>
                                      </label>


                            }
                        </div>
                        </div>
                    </div>

                    <div class="form-group m-5 text-center">
                        <input type="submit" value="Save" class="btn btn-sm btn-outline-primary" />
                        <a asp-action="Index" class="btn btn-sm btn-outline-dark">Back to List</a>

                    </div>
                </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

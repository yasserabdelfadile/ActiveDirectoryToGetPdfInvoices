@model WebApplication25.Models.Data.EntityRole

@{
    ViewData["Title"] = "Create";
}


<div class="card align-content-center  mt-4 ">
    <div class="card-header text-center">

        <h1>Create Role</h1>

     </div>
    <div class="card-body align-items-center text-center">

                  <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control text-center" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        
                        @if(ViewBag.Sites is not null)
                         {
                                    @foreach (var site in ViewBag.Sites)
                                    { 
                                        <label class="checkbox-inline">
                                            <input type="checkbox" name="selectedSites" value="@site.ID" class="m-1" />
                                            @site.Name
                                        </label>
                            
                                    }
                         }
                @if (ViewBag.Sites is  null)
                {
                   <p>at least choose one site </p>
                }

                </div>

                    <div class="form-group mt-5">
                        <input type="submit" value="Create" class="btn btn-sm  btn-outline-primary" />
                        <a asp-action="Index" class="btn btn-sm btn-outline-dark">Back to List</a>

                    </div>
                </form>
           
         

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

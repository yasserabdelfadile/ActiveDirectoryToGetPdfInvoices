@model WebApplication25.Models.ModelView.UserRoleForm

@{
    ViewData["Title"] = "Edit";
}


<div class="card m-5">
    <div class="card-header  m-2">

        <h3>@Model.Name</h3>

        <h6 class="m-2">Add/Remove Roles</h6>
    </div>
    <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group mt-2 text-center">
                         <div>
                            <div class="form-check mt-1">
                                @for (int i = 0; i < Model.roleUs.Count; i++)
                                {
                                    <label class="checkbox-inline">
                                        <input type="hidden" asp-for="@Model.roleUs[i].Name" />
                                        <input asp-for="@Model.roleUs[i].IsSelected" class="form-check-input m-2" />
                                        <label class="form-check-label" asp-for="@Model.roleUs[i].IsSelected">
                                            @Model.roleUs[i].Name
                                        </label>
                                    </label>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="form-group m-5 text-center">
                <input type="submit" value="Save" class="btn btn-sm btn-outline-primary" />
                <a asp-action="Index" class="btn btn-sm btn-outline-dark">Back to List</a>
                    </div>
                </form>


    </div>
</div>





 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

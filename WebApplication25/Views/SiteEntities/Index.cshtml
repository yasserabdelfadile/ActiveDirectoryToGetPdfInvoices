@model IEnumerable<WebApplication25.Models.Data.SiteEntity>

@{
    ViewData["Title"] = "Index";
}
@{
    int x = 1;
}



<div class="card m-5">
    <div class="card-header">

 
        <p class="m-3">
            <a asp-action="Create" class="btn btn-sm btn-outline-success bi bi-plus-lg"> Create New</a>
            <a asp-action="update" class="btn btn-sm btn-outline-info bi bi-arrow-clockwise"> Update Site</a>
        </p>
    </div>
    <div class="card-body m-5">
        <table id="example" class="table table-borderless table-hover table-responsive table-striped  text-center ">
            <thead>
                <tr>
                    <th>#</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                     <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@x</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary bi bi-gear"> </a>
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger bi bi-trash3 "></a>
                            </td>
                        </tr>
                        { x += 1; }
                    }
                }

            </tbody>
        </table>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.1/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.html5.min.js"></script>

<script src="~/assets/js/custom.js"></script>



